				if group == 'label' then
					nb_equipiers = 1;
				else
					nb_equipiers = GetNbEquipiers($(Code_bateau));
				end
			</lua>
			<matrix col="20">
				<col w="20" />
				<lua>for e=1,nb_equipiers do</lua>
